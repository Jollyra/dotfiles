[user]
	name = Nigel Rahkola
	email = me@nigelrahkola.com
[pull]
	rebase = true
[color]
	ui = auto
[core]
	editor = vim
[push]
	default = simple
[alias]
	stashes = stash list
	branches = branch -a
  aliases = !git config -l | grep alias | cut -c 7-
	unstage = reset -q HEAD --
	discard = checkout --
	uncommit = reset --mixed HEAD~
	amend = commit --amend
	nevermind = !git reset --hard HEAD && git clean -d -f
	patch = add --patch
	follow = log --follow -p --
	short = log --oneline
