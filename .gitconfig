[user]
	name = Nigel Rahkola
	email = me@nigelrahkola.com
[pull]
	rebase = true
[color]
	ui = auto
[diff]
	tool = diffmerge
[difftool "diffmerge"]
	cmd = diffmerge \"$LOCAL\" \"$REMOTE\"
[merge]
	tool = diffmerge
[mergetool "diffmerge"]
	cmd = "diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$(if test -f \"$BASE\"; then echo \"$BASE\"; else echo \"$LOCAL\"; fi)\" \"$REMOTE\""
	trustExitCode = true
[core]
	editor = vim
[push]
	default = simple
[init]
	templatedir = ~/.git_template
[alias]
	# ctags = !.git/hooks/ctags\n
	stashes = stash list
	branches = branch -a
    aliases = !git config -l | grep alias | cut -c 7-
	tags = tag
	unstage = reset -q HEAD --
	discard = checkout --
	uncommit = reset --mixed HEAD~
	amend = commit --amend
	nevermind = !git reset --hard HEAD && git clean -d -f
	patch = add --patch
	follow = log --follow -p --
	short = log --oneline
